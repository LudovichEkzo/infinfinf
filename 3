import locale


x = int(input("Введите значение x: "))
y = int(input("Введите значение y: "))
z = int(input("Введите значение z: "))

if x != 0:
    m = 1 / x
else:
    m = x

if y != 0:
    n = 1 / y
else:
    n = y

if z != 0:
    o = 1 / z
else:
    o = z

print("Новые значения: x = {}, y = {}, z = {}".format(m, n, o))
